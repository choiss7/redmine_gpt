<h1>GPT-4 Conversation</h1>

<div id="conversation" style="background-color: #f3f3f3; padding: 20px; height: 300px; overflow-y: scroll; margin-bottom: 20px;">
  <% if @response_text %>
    <div><strong>You:</strong> <%= params[:prompt] %></div>
    <div><strong>GPT-4:</strong> <%= simple_format(@response_text) %></div>
  <% end %>
</div>

<%= form_with url: generate_gpt_path, method: :post, local: true do |form| %>
  <div>
    <%= label_tag :prompt, "Enter your message:" %>
    <%= text_area_tag :prompt, nil, placeholder: "Type your message here...", class: "form-control" %>
  </div>
  <div style="margin-top: 10px;">
    <%= submit_tag "Send", class: "btn btn-primary" %>
  </div>
<% end %>

<script>
  // Scroll to the bottom of the conversation div every time the page loads.
  window.onload = function() {
    var conversationDiv = document.getElementById('conversation');
    conversationDiv.scrollTop = conversationDiv.scrollHeight;
  };
</script>
